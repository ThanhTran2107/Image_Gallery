{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["react", "import", "jsx-a11y"],
  "rules": {
    "react/prop-types": 0,
    "indent": ["error", 2],
    "linebreak-style": 1,
    "react/react-in-jsx-scope": "off",
    "no-async-promise-executor": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/extensions": ["js"],
    "import/ignore": ["node_modules"],
    "import/resolver": {
      "node": {
        "paths": ["src", "."]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}